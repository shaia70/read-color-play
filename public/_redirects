
# Redirects for Netlify
# This ensures that all routes are handled by the SPA
/*    /index.html   200

# Force HTTPS
http://shelley.co.il/*  https://shelley.co.il/:splat 301!
http://www.shelley.co.il/*  https://shelley.co.il/:splat 301!

# Canonical domain enforcement (remove www)
https://www.shelley.co.il/*  https://shelley.co.il/:splat 301!

# Language redirects
/en  /en/  301!
/he  /  301!

# Redirect alternate language versions
/download  /download  200  Language=he
/download  /en/download  302  Language=en
/en/download  /en/download  200  Language=en
/en/download  /download  302  Language=he

# Redirect for mobile app deep linking
/app/* /download 302

# Ensure the statistics page is always accessible
/admin-statistics  /admin-statistics  200

